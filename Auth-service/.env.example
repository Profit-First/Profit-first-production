PORT=3000
NODE_ENV=development

# AWS Configuration
AWS_REGION=ap-south-1
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key

# AWS Cognito
COGNITO_CLIENT_ID=your-cognito-client-id

# Cognito OAuth Configuration (for social login)
# Format: https://your-domain.auth.region.amazoncognito.com
COGNITO_DOMAIN=https://your-domain.auth.ap-south-1.amazoncognito.com

# OAuth callback URL - Must match AWS Cognito "Allowed callback URLs"
# Server automatically redirects from root to /api/auth/oauth/callback
# For localhost: http://localhost:3000
# For production: https://yourdomain.com
COGNITO_REDIRECT_URI=http://localhost:3000

# DynamoDB
DYNAMODB_TABLE_NAME=Users
ONBOARDING_TABLE_NAME=Onboarding
SHOPIFY_PRODUCTS_TABLE=shopify_products
SHOPIFY_ORDERS_TABLE=shopify_orders
SHOPIFY_CUSTOMERS_TABLE=shopify_customers
SHOPIFY_CONNECTIONS_TABLE=shopify_connections
META_CONNECTIONS_TABLE=meta_connections

# Admin Configuration
ADMIN_KEY=your-admin-secret-key

# Frontend URL (for OAuth redirects)
FRONTEND_URL=http://localhost:5173

# Meta Insights Table
META_INSIGHTS_TABLE=meta_insights

# Shiprocket Table
SHIPROCKET_TABLE=shiprocket_shipments

# Redis Configuration (Optional - for caching)
# If not provided, falls back to in-memory cache
# Local: redis://localhost:6379
# Production: redis://your-redis-host:6379
# Redis Cloud: redis://username:password@host:port
REDIS_URL=redis://localhost:6379
